# Frontend (React build on Nginx)
3tshop.thienduong.info {
    encode gzip
    reverse_proxy frontend:80

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        Referrer-Policy "strict-origin-when-cross-origin"
    }

    log {
        output file /var/log/caddy/frontend.log
    }
}

# Backend (NodeJS)
api.3tshop.thienduong.info {
    encode gzip
    reverse_proxy backend:8080

    # (tùy chỉnh) CORS basic nếu backend chưa bật
    header {
        Access-Control-Allow-Origin "https://3tshop.thienduong.info"
        Access-Control-Allow-Methods "GET, POST, PUT, PATCH, DELETE, OPTIONS"
        Access-Control-Allow-Headers "Content-Type, Authorization"
    }

    log {
        output file /var/log/caddy/backend.log
    }
}
